<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".productsofshop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/shopsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="products of shop"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/plum"
            android:textColorLink="@color/orchid"
            android:textSize="35sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/softpink"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopsabout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="about the shop"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopscategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="category: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopsaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="address of shop: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopsphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phone of shop: "
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10pt" />

            <TextView
                android:id="@+id/shopsproducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/plum"
                android:gravity="center"
                android:text="store's products"
                android:textSize="20sp"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"

                tools:listitem="@layout/list_products" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>