<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/shopsname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="shops"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/brown2"
        android:textColorLink="@color/orchid"
        android:textSize="15pt"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/shopslist"
        android:layout_width="wrap_content"
        android:layout_height="120pt"
        android:backgroundTint="@color/softbrown"
        android:clipToPadding="false"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:paddingTop="30pt"
        android:stretchMode="columnWidth"

        android:verticalSpacing="10dp"
        tools:listitem="@layout/list_shops" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/shopsnamee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/brown2"
            android:textColorLink="@color/orchid"
            android:textSize="12pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <GridView
            android:id="@+id/products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:paddingTop="200dp"
            android:stretchMode="columnWidth"

            android:verticalSpacing="10dp"
            tools:listitem="@layout/list_products">

        </GridView>


    </LinearLayout>

</RelativeLayout>