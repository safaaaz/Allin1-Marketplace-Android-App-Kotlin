<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <GridView
        android:id="@+id/products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"

        tools:listitem="@layout/list_products" >

    </GridView>

    <TextView
        android:id="@+id/shopsname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="well"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FF33F3"
        android:textColorLink="@color/orchid"
        android:textSize="15pt"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/shopslist"
        android:layout_width="wrap_content"
        android:layout_height="100pt"
        android:backgroundTint="@color/plum"
        android:clipToPadding="false"
        tools:ignore="NotSibling"
        android:numColumns="1"
        tools:listitem="@layout/list_shops" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/shopsnamee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FF33F3"
            android:textColorLink="@color/orchid"
            android:textSize="15pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />




    </LinearLayout>

</RelativeLayout>