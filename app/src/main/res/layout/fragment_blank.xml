<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical"
app:layoutDescription="@xml/activity_main_scene"
tools:context=".ownersignup">

    <ImageView
        android:id="@+id/top_curve3"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-50dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginRight="-50dp"
        android:paddingTop="0pt"
        android:paddingEnd="20pt"
        android:src="@drawable/img" />

    <!--   <Button
        android:id="@+id/Add_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addstore"
        android:text="Add Store" />-->


    <TextView
        android:id="@+id/welcome"
        android:layout_width="399dp"
        android:layout_height="64dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Add_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/custom_dialog"
        android:focusable="true"
        android:onClick="addstore"
        android:paddingStart="25dp"
        android:paddingTop="20dp"
        android:paddingEnd="25dp"
        android:paddingBottom="15dp"
        android:text="Add Store"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHighlight="#FF33F3"
        android:textColorHint="#FF33F3"
        android:textColorLink="#FF33F3"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#FF33F3" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/custom_dialog"
        android:focusable="true"
        android:onClick="logoutowner"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingEnd="25dp"
        android:paddingBottom="15dp"
        android:text="logout"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHighlight="#FF33F3"
        android:textColorHint="#FF33F3"
        android:textColorLink="#FF33F3"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#FF33F3" />


</LinearLayout>