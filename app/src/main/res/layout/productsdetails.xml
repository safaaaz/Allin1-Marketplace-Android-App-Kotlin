<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".productsdetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/productsimg"
        android:layout_width="140pt"
        android:layout_height="140pt"
        android:foregroundGravity="center"
        android:paddingTop="7pt"
         />

    <TextView
        android:id="@+id/productsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:text="TextView"
        android:textSize="7pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productsabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center|left"
        android:longClickable="false"
        android:text="about" />

    <TextView
        android:id="@+id/productsprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:text="TextView"
        android:textSize="7pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addtocart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:onClick="addtocart"
        android:scrollbarSize="5dp"
        android:text="add to cart"
        android:textSelectHandleLeft="@color/plum"
        android:textSize="6pt"
        />
    <Button
            android:id="@+id/gotostore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gostore"
            android:text="go to the store" />
    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:fadeScrollbars="true"
        android:indeterminate="true"
        android:numStars="5"
        android:scrollbarSize="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop name" />

        <TextView
            android:id="@+id/shopabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="about shop" />

        <TextView
            android:id="@+id/shopphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop phone" />

        <TextView
            android:id="@+id/shopaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop address" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="reviews"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/peoplecomments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/commit_list" />
        <EditText
            android:id="@+id/writecomm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="write commit" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="save_commit"
            android:text="save" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
